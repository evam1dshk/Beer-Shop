@model IEnumerable<MyBeerShop.Data.Entities.Order>

<h2>Your Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>@order.OrderItems.Sum(i => i.Quantity * i.Price).ToString("c")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
