@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <h2 class="mt-5">About Us</h2>
            <p class="lead">Welcome to Brew Ha-Ha!</p>
            <p class="text-muted">We are passionate about providing the finest selection of beers to our customers.</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <img src="path_to_your_image.jpg" class="img-fluid rounded" alt="Brew Ha-Ha Store">
        </div>
        <div class="col-md-6">
            <h3>Our Story</h3>
            <p class="text-muted">Founded in 2024, Brew Ha-Ha strives to offer a diverse range of high-quality beers from around the world. Our mission is to create an exceptional beer shopping experience for enthusiasts and connoisseurs alike.</p>
            <p class="text-muted">We believe in quality, variety, and customer satisfaction. Whether you're a seasoned beer lover or just beginning your journey, Brew Ha-Ha is here to help you find the perfect brew.</p>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-lg-8 mx-auto text-center">
            <h3>Our Mission</h3>
            <p class="text-muted">To deliver an unparalleled beer shopping experience by offering a wide selection of high-quality beers, exceptional customer service, and a welcoming community for all beer enthusiasts.</p>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-lg-8 mx-auto text-center">
            <h3>Meet the Team</h3>
        </div>
        <div class="col-md-4 text-center mt-4">
            <img src="path_to_team_member_image.jpg" class="img-fluid rounded-circle mb-3" alt="Team Member">
            <h5>John Doe</h5>
            <p class="text-muted">Founder & CEO</p>
        </div>
        <div class="col-md-4 text-center mt-4">
            <img src="path_to_team_member_image.jpg" class="img-fluid rounded-circle mb-3" alt="Team Member">
            <h5>Jane Smith</h5>
            <p class="text-muted">Head Brewer</p>
        </div>
        <div class="col-md-4 text-center mt-4">
            <img src="https://www.nytimes.com/interactive/2020/11/21/science/artificial-intelligence-fake-people-faces.html" class="img-fluid rounded-circle mb-3" alt="Team Member">
            <h5>Emily Brown</h5>
            <p class="text-muted">Customer Relations</p>
        </div>
    </div>
</div>
