@model MyBeerShop.Models.Beers.BeerViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="BeerName"></label>
                <input asp-for="BeerName" class="form-control" placeholder="Beer Name...">
                <span asp-validation-for="BeerName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producer"></label>
                <input asp-for="Producer" class="form-control" placeholder="Producer...">
                <span asp-validation-for="Producer" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Image URL...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Price...">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CriticScore"></label>
                <input asp-for="CriticScore" class="form-control" placeholder="Critic Score...">
                <span asp-validation-for="CriticScore" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlcoholBV"></label>
                <input asp-for="AlcoholBV" class="form-control" placeholder="Alcohol BV...">
                <span asp-validation-for="AlcoholBV" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestingNotes"></label>
                <textarea asp-for="TestingNotes" rows="4" class="form-control" placeholder="Testing Notes..."></textarea>
                <span asp-validation-for="TestingNotes" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Packaging"></label>
                <textarea asp-for="Packaging" rows="4" class="form-control" placeholder="Packaging..."></textarea>
                <span asp-validation-for="Packaging" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeerTypeId">Beer Type</label>
                <select asp-for="BeerTypeId" class="form-control">
                    @foreach (var type in Model.BeerTypes)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="BeerTypeId" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>
