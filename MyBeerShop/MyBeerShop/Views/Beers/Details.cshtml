@model MyBeerShop.Models.Beers.BeersDetailsViewModel

@{
    ViewData["Title"] = "Beer Details";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.BeerName" class="img-fluid">
        </div>
        <div class="col-md-6">
            <h2>@Model.BeerName</h2>
            <p><strong>Producer: </strong>@Model.Producer</p>
            <p><strong>Price: </strong>@Model.Price.ToString("C")</p>
            <p><strong>Critic Score: </strong>@Model.CriticScore</p>
            <p><strong>Alcohol By Volume (ABV): </strong>@Model.AlcoholBV</p>
            <p><strong>Description: </strong>@Model.Description</p>
            <p><strong>Tasting Notes: </strong>@Model.TestingNotes</p>
            <p><strong>Packaging: </strong>@Model.Packaging</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="@Url.Action("All", "Beers")" class="btn btn-primary">Back to Shop</a>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Edit", "Beers", new { id = Model.Id })" class="btn btn-warning mb-2">Edit</a>
            <a href="@Url.Action("Delete", "Beers", new { id = Model.Id })" class="btn btn-danger mb-2">Delete</a>
        }
    </div>
</div>
